    </style>
    <style name="ChatActThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/appbg</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#eebb50</item>
        <item name="android:textSize">14dp</item>

        <item name="themedMenuKeyboard">@drawable/keyboard</item>
        <item name="themedMenuMicrophone">@drawable/microphone</item>
        <item name="themedMenuMain">@drawable/menu</item>
    </style>

    <style name="ChatActThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/appbg_white</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14dp</item>

        <item name="themedMenuKeyboard">@drawable/keyboard</item>
        <item name="themedMenuMicrophone">@drawable/microphone</item>
        <item name="themedMenuMain">@drawable/menu</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/icons</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TransparentListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="android:background">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textColor">#eebb50</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="checkboxTheme" parent="AppTheme">
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>
    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gold</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
