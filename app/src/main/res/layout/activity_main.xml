<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:orientation="horizontal"
       android:background="@color/secondary_text"
       android:visibility="gone">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/menuprofile"
           android:tint="@color/icons"
           android:layout_marginLeft="7dp"
           android:layout_centerVertical="true"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/menuprofile"
           android:layout_alignParentRight="true"
           android:tint="@color/icons"
           android:layout_centerVertical="true"
           android:layout_marginRight="7dp"/>
   </RelativeLayout>
       <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="10">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="4"
       android:orientation="vertical"
       android:background="@color/primary_text">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="40dp">
       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/profile_image"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/profile_img"
           app:civ_border_width="2dp"
           app:civ_border_color="@color/gold"
           android:layout_marginLeft="10dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="15dp"
               android:layout_gravity="center_vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/todd_wallace"
                   android:textSize="15sp"
                   android:textColor="@color/icons"
                   android:textStyle="normal"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/profile_completed"
                   android:textSize="8sp"
                   android:textColor="@color/gold"
                   android:textStyle="normal"
                   />
           </LinearLayout>

       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_centerHorizontal="true">
               <ImageView
                   android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:src="@drawable/ic_basemember"
                   android:adjustViewBounds="true"
                   android:layout_gravity="center_horizontal"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/points"
                   android:textSize="10sp"
                   android:textColor="@color/icons"
                   android:textStyle="normal"
                   android:layout_marginTop="3dp"
                   android:layout_gravity="center_horizontal"
                   />
           </LinearLayout>

       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_alignParentRight="true"
               android:layout_marginRight="17dp"
               android:background="@drawable/club_gradient"
               android:padding="5dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/join_elite_club"
                   android:textSize="7sp"
                   android:textColor="@color/gold"
                   android:textStyle="normal"
                   />
           </LinearLayout>
       </RelativeLayout>
   </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="6"
           android:orientation="vertical"
           android:background="@color/icons"
           android:weightSum="4">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:weightSum="3">
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient"
                   android:id="@+id/profileEvent">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_centerInParent="true"
                       >
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       android:src="@drawable/menuprofile"
                       android:layout_gravity="center"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/profile"
                           android:textSize="11sp"
                           android:textColor="@color/secondary_text"
                           android:textStyle="normal"
                           />
                   </LinearLayout>
               </RelativeLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/transactionRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/transactions"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/transaction"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/walletRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/wallet"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/wallet"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:weightSum="3">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/promotionsRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/promotions"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/promotions"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/eliteClubRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/elite_club"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/elite_club"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/tieGenieRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/tipgenie"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/tip_genie"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:weightSum="3">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/legalRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/legal"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/legal"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/helpRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/help"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/help"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/notificationRL"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/notification"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/notifications"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:weightSum="3">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/referEarn"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/refer_earn"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/refer_earn"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">
                   <RelativeLayout
                       android:id="@+id/settings"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:background="@drawable/dashbord_gradient">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_centerInParent="true"
                           >
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/settings"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/settings"
                               android:textSize="11sp"
                               android:textColor="@color/secondary_text"
                               android:textStyle="normal"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:background="@drawable/dashbord_gradient">

               </LinearLayout>
           </LinearLayout>


       </LinearLayout>
   </LinearLayout>
   </LinearLayout>
