<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:id="@+id/screenId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/header"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/ic_basemember"
                                android:layout_centerHorizontal="true"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:id="@+id/pointsTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10000"
                                    android:textSize="12sp"
                                    android:textColor="@color/icons"
                                    android:textStyle="normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/eliteClubTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Elite Member"
                                    android:textSize="17sp"
                                    android:textColor="@color/gold"
                                    android:textStyle="normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/subScriptionTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="subscription 10 oct 2017"
                                    android:textSize="12sp"
                                    android:textColor="@color/icons"
                                    android:textStyle="normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/remainingDaysTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="365 Days are remaining"
                                    android:textSize="17sp"
                                    android:textColor="@color/icons"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="15dp"
                                    />
                                <Button
                                    android:id="@+id/benifitsBtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:padding="10dp"
                                    android:text="BENEFITS"
                                    android:textColor="@color/primary_text"
                                    android:background="@drawable/benifit_gold"
                                    android:onClick="showBenifits"
                                    android:textSize="@dimen/benifit_btn_txt_size"/>


                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
