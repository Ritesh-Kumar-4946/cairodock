<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:id="@+id/screenId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/header"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/baseMemberImg"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/ic_basemember"
                                    android:layout_centerHorizontal="true"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:id="@+id/pointsTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10000 Points"
                                        android:textSize="12sp"
                                        android:textColor="@color/icons"
                                        android:textStyle="normal"
                                        android:layout_gravity="center_horizontal"
                                        />

                                    <TextView
                                        android:id="@+id/descriptionTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/description"
                                        android:textSize="10sp"
                                        android:textColor="@color/icons"
                                        android:textStyle="normal"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"/>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/headerLL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">
                        <ImageView
                            android:id="@+id/speedoMeterImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/speedometer"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/speedoMeter"
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Reward Rate 2X"
                                android:textColor="@color/icons"/>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/seprator1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"></View>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/headerLL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">
                        <ImageView
                            android:id="@+id/movieTicketImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/movie"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/movieTicket"
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Movie Tickets 1 per month"
                                android:textColor="@color/icons"/>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/seprator2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"></View>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/headerLL3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">
                        <ImageView
                            android:id="@+id/lougeImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lounge"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/lougeAssests"
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Lounge Assets 6 Per Year"
                                android:textColor="@color/icons"/>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/seprator3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"></View>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
