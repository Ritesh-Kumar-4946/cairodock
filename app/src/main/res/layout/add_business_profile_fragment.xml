<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Business Profile Name"
                        android:textColor="@color/secondary_text"
                        android:textStyle="normal"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/nameET"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:drawableBottom="@color/secondary_text"

                        android:drawableRight="@drawable/edit"
                        android:layout_marginTop="5dp"
                        android:text="XYZ"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VAT/GST"
                        android:textColor="@color/secondary_text"
                        android:textStyle="normal"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/gstET"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:drawableBottom="@color/secondary_text"
                        android:text="22AAAAAA000A1Z5"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textColor="@color/secondary_text"
                        android:textStyle="normal"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/emailET"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:drawableBottom="@color/secondary_text"
                        android:text="test@gmail.com"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Business Profile Name"
                        android:textColor="@color/secondary_text"
                        android:textStyle="normal"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/countryET"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:drawableBottom="@color/secondary_text"
                        android:drawableLeft="@drawable/edit"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:layout_marginTop="5dp"
                        android:text="USA"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textColor="@color/secondary_text"
                            android:textStyle="normal"
                            android:layout_centerVertical="true"


                            />
                        <EditText
                            android:id="@+id/stateET"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:drawableBottom="@color/icons"
                            android:layout_marginTop="5dp"
                            android:text="Midtown West"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textColor="@color/secondary_text"
                            android:textStyle="normal"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            />
                        <EditText
                            android:id="@+id/cityET"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:drawableBottom="@color/icons"
                            android:layout_marginTop="5dp"
                            android:text="New York"

                            />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zip"
                            android:textColor="@color/secondary_text"
                            android:textStyle="normal"
                            android:layout_centerVertical="true"


                            />
                        <EditText
                            android:id="@+id/zipET"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:drawableBottom="@color/icons"
                            android:layout_marginTop="5dp"
                            android:text="10001"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Country Number"
                            android:textColor="@color/secondary_text"
                            android:textStyle="normal"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            />
                        <EditText
                            android:id="@+id/contactET"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:drawableBottom="@color/icons"
                            android:layout_marginTop="5dp"
                            android:text="+1-800-233-2742"
                            android:drawableLeft="@drawable/edit"
                            android:drawablePadding="5dp"

                            />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <Button
                        android:id="@+id/benifitsBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="CANCEL"
                        android:textColor="@color/primary_text"
                        android:background="@color/gold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="SAVE"
                        android:textColor="@color/primary_text"
                        android:background="@color/gold"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
